<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/profile_list1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/foto_produk1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/foto_profile"
            app:layout_constraintStart_toStartOf="@id/profile_list1"
            app:layout_constraintTop_toTopOf="@id/profile_list1" />

        <TextView
            android:id="@+id/nama_produk1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Product 1"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/foto_produk1"
            app:layout_constraintTop_toTopOf="@id/profile_list1" />

        <TextView
            android:id="@+id/deskripsi_produk1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="L, Hot Pink"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/foto_produk1"
            app:layout_constraintTop_toBottomOf="@id/nama_produk1" />

        <TextView
            android:id="@+id/jumlah_produk1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="x 2"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/profile_list1"
            app:layout_constraintTop_toBottomOf="@id/nama_produk1" />

        <TextView
            android:id="@+id/harga1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="24dp"
            android:text="Rp 200.000"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/profile_list1"
            app:layout_constraintTop_toBottomOf="@id/jumlah_produk1" />

        <TextView
            android:id="@+id/teks_harga1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Total Pembayaran"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/foto_produk1"
            app:layout_constraintTop_toBottomOf="@id/harga1" />

        <TextView
            android:id="@+id/total_harga1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="Rp 400.000"
            android:textColor="@color/harga"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/profile_list1"
            app:layout_constraintTop_toBottomOf="@id/harga1" />

        <TextView
            android:id="@+id/ket_bayar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="24dp"
            android:text="Belum dikirim"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="@id/profile_list1"
            app:layout_constraintTop_toBottomOf="@id/total_harga1" />

        <View
            android:id="@+id/garis2"
            android:layout_width="250dp"
            android:layout_height="0.3dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:background="@color/black_transparent"
            app:layout_constraintStart_toEndOf="@id/foto_produk1"
            app:layout_constraintTop_toBottomOf="@id/ket_bayar1" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>